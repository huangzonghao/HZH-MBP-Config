[user]
    name = HuangZonghao
    email = coding@hzh.io
[push]
    default = matching
[merge]
    tool = vim
[mergetool "vim"]
    cmd = "vim -u $DOTFILES_PATH/vim/configs/git_merge.vim $MERGED"
[alias]
    d = difftool
    m = mergetool
    me = merge
    mec = merge --continue
    la = log --pretty=format:'%C(bold yellow)%h %C(cyan)%an%C(green)(%ad) %Creset%s%C(bold red)%d' --decorate --graph --date=format:'%y-%m-%d %H:%M%z'
    lac = log --pretty=format:'%C(bold yellow)%h %C(cyan)%an%C(green)(%ad %C(blue)%ci) %Creset%s%C(bold red)%d' --decorate --graph --date=format:'%y-%m-%d %H:%M%z'
    ll = log --pretty=format:'%C(bold yellow)%h%Cred%d  %Creset%s %C(cyan)  <%an> %C(green) (%aD)' --decorate  --numstat
    l = la -n 10
    lc = lac -n 10
    st = status -s
    cm = commit -m
    ci = commit
    ca = commit --amend --no-edit
    co = checkout
    cp = cherry-pick
    cpc = cherry-pick --continue
    b = branch
    bv = branch -v
    ba = branch -a
    rb = rebase
    rbc = rebase --continue
    rbd = rebase --committer-date-is-author-date
    rbt = "!less .git/rebase-merge/git-rebase-todo"
    rl = reflog
    sl = stash list
    ss = stash save
    sa = "!f() { [ $# -eq 1 ] && git stash apply stash@{$1} || git stash apply; }; f"
    sp = "!f() { [ $# -eq 1 ] && git stash pop stash@{$1} || git stash pop; }; f"
    sd = "!f() { [ $# -eq 1 ] && git stash drop stash@{$1} || git stash drop; }; f"
    pinfo = info --no-config
    ph = push
    pl = pull
    prb = pull --rebase
    subup = submodule update --init --recursive
    subups = submodule update --init --recursive --depth 1
    settime = commit --amend --reset-author --no-edit
[diff]
    tool = vimdiff
    indentHeuristic = true
    algorithm = histogram
[core]
    editor = vim
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[log]
    decorate = true
[credential]
    helper = store
